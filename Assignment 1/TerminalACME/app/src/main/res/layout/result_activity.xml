<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutRes"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#AFD0F7"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="348dp"
        android:layout_height="354dp"
        android:layout_gravity="center|center_horizontal|top"
        android:alpha="0.7"
        app:srcCompat="@drawable/logo" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:gravity="bottom|center"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:id="@+id/titleRes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="@string/placeholder"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="48sp" />

        <TextView
            android:id="@+id/descRes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="@string/placeholder"
            android:textAlignment="center"
            android:textSize="24sp" />

        <Button
            android:id="@+id/retryBut"
            android:layout_width="173dp"
            android:layout_height="70dp"
            android:background="@color/sky_blue"
            android:fontFamily="@font/imprima_regular"
            android:padding="20dp"
            android:text="@string/retry"
            android:textColor="@color/white"
            android:textSize="24sp" />

    </LinearLayout>

</FrameLayout>